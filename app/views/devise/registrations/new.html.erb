<%= render "shared/header" %>
<%= form_with model: @user, url: user_registration_path, class:'signup-main', local: true do |f| %>
<div class='main-form'>
  <div class='form-heading'>
    <h1>ユーザーアカウント作成</h1>
    <span class="line"></span>
    <p>アカウント情報</p>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <p class="form-label">ニックネーム</p>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:"form-text"%>
  </div>

  <div class="form-group">
    <p class="form-label">メールアドレス</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-text"%>
  </div>

  <div class="form-group">
    <p class="form-label">パスワード</p>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-text"%>
  </div>

  <div class="form-group">
    <p class="form-label">パスワード(確認用)</p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-text"%>
  </div>

  <div class="signup">
    <%= f.submit "アカウント作成", class:"signup-btn"%>
  </div>

  <div class="login">
    <%= link_to 'ログインの方はこちらをクリック', new_user_session_path, class:"login-btn" %>
  </div>
</div>
<% end %>